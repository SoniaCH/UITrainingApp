<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Menu.Views.StepThree">
  <ContentView.Content>
        <ScrollView>
            <StackLayout>

                <StackLayout>
                   <Label Text="Please review your cart" TextColor="#443E43" FontSize="14" Margin="10,0,10,0"></Label>
                </StackLayout>
                <!--  The list view code -->
            <ListView x:Name="ListItems" RowHeight="120" BackgroundColor="White" VerticalOptions="Fill">
                <ListView.ItemTemplate>
                    <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Horizontal">
                                    <Image Margin="10,0,10,0" Source="{Binding Close}" HeightRequest="10">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="DeleteItem"></TapGestureRecognizer>
                                        </Image.GestureRecognizers>
                                        
                                    </Image>
                                    <Image Margin="10,0,10,0" Source="{Binding Image}" HeightRequest="60" WidthRequest="60"/>
                                    <StackLayout Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center">
                                        <Label Text="{Binding Name}" TextColor="Black"   LineBreakMode="WordWrap"/>
                                        <Label Text="{Binding Description}" TextColor="Gray" />
                                    </StackLayout>
                                    <Label Text="{Binding Price}" TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </StackLayout>
                            </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!-- for the text and payment part  -->
            <Frame OutlineColor="Black">
                <StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label FontSize="18" HorizontalOptions="StartAndExpand" Text="Sub Total" ></Label>
                        <Label FontSize="18" Text="9000.00" ></Label>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label FontSize="18" HorizontalOptions="StartAndExpand" Text="Shipping" ></Label>
                        <Label FontSize="18" Text="35.00" ></Label>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label FontSize="18" HorizontalOptions="StartAndExpand" Text="VAT" ></Label>
                        <Label FontSize="18" Text="456.00" ></Label>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label FontSize="18" HorizontalOptions="StartAndExpand" Text="Total" ></Label>
                        <Label FontSize="18" Text="9450.00 SAR" ></Label>
                    </StackLayout>
                </StackLayout>
            </Frame>
        </StackLayout>
        </ScrollView>
    </ContentView.Content>
</ContentView>